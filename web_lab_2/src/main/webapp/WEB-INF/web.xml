<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <welcome-file-list>
        <welcome-file>controllerServlet</welcome-file>
    </welcome-file-list>


    <servlet>
        <servlet-name>controllerServlet</servlet-name>
        <servlet-class>ru.arina.maxim.servlet.ControllerServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>controllerServlet</servlet-name>
        <url-pattern>/controllerServlet</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>controllerServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>areaCheck</servlet-name>
        <servlet-class>ru.arina.maxim.servlet.AreaCheckServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>areaCheck</servlet-name>
        <url-pattern>/areaCheck</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.htm</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>

</web-app>